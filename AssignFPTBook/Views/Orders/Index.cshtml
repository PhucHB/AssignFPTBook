@model IEnumerable<Order>

    <h1>...................</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>

            <th scope="col">Order Date</th>
            <th scope="col">Total</th>
            
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.OrderDate</td>
                <td>@item.Total</td>
                
                <td>
                    <a asp-controller="Orders"
                   asp-action="Detail"
                   asp-route-id=@item.Id
                   class="btn btn-info">
                        Detail
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
