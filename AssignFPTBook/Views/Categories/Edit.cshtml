@using AssignFPTBook.Enums
@model Category
<h1>Edit</h1>
<form asp-controller="Categories" asp-action="Edit" method="post">
    <div class="form-group">
    <label>Category Title</label>
    <input asp-for="Description" class="form-control" placeholder="Category Title ..." />
     <label>Status</label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<ContactStatus>()" class="form-control">
        </select>
  </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Edit</button>
    </div>
</form>